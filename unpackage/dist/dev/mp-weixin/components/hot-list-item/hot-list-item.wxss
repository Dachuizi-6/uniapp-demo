.hot-list-item-container {
  padding-bottom: 12px;
}
.hot-list-item-container .hot-list-item-box {
  display: flex;
  margin: 0 10px;
  padding: 12px 10px;
  background-color: #ffffff;
  border-radius: 6px;
  box-shadow: 2px 2px 5px 1px rgba(143, 143, 143, 0.1);
}
.hot-list-item-container .hot-list-item-box .hot-list-item-left {
  margin-right: 5px;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right {
  width: 100%;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-right-title {
  font-size: 16px;
  color: #000;
  font-weight: bold;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-right-desc {
  font-size: 14px;
  color: #333;
  padding-top: 4px;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-bottom-box {
  display: flex;
  justify-content: space-between;
  margin-top: 4px;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-bottom-box .item-author {
  font-size: 12px;
  color: #999;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-bottom-box .hot-box .hot-icon {
  width: 20px;
  height: 20px;
  vertical-align: top;
}
.hot-list-item-container .hot-list-item-box .hot-list-item-right .item-bottom-box .hot-box .hot-text {
  color: #f94d2a;
  font-size: 12px;
  margin-left: 5px;
}

